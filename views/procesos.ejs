<!DOCTYPE html>
<html lang="en">
<%- include("./parciales/head") %>
<body>
    <%- include("./parciales/header") %>
    <main>
        <h3>Agregar nuevo proceso</h3>
        <form action="/procesos" method="POST">
            <div class="campos_formulario">
                <label>Proceso</label>
                <select name="proceso">
                    <option value="">Seleccioná etapa</option>
                    <% for(let proceso of procesos) { %>
                        <option value="<%= proceso.id %>"><%= proceso.etapa %></option>
                    <% } %>
                </select>
            </div>
            <div class="campos_formulario">
                <label>Estado</label>
                <select name="estado">
                    <option value="">seleccioná estado</option>
                    <% for(let estado of estados) { %>
                        <option value="<%= estado.id %>"><%= estado.estado %></option>
                    <% } %>
                </select>
            </div>
            <div class="campos_formulario">
                <label>Responsable</label>
                <select name="responsable">
                    <option value="">Seleccioná responsable</option>
                    <% for(let responsable of responsables){ %>
                        <option value="<%= responsable.id %>"><%= responsable.nombre %></option> 
                    <% } %>
                </select>
            </div>
            <div class="botones_formulario">
                <button type="submit">Aceptar</button>
                <button type="reset">Cancelar</button>
            </div>
        </form>
    </main>
    <%- include("./parciales/footer") %>
</body>
</html>